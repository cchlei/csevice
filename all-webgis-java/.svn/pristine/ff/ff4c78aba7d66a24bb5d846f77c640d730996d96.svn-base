@import "tool";

.reset;
.toolClass;

@bot_h:150px;

body {
	background: #abdaed;
}

.loginbody {
	width: 100%;
	min-height: 680px;
}

.login_cnt {
	width: 1200px;
	margin: 0 auto;
	padding-top: 50px;
}

.login-logo {
	float: left;
}


//插图
.illu {
	@width: 668px;
	._size(@width, 535);
	margin-left: -@width/2;
	left: 30%;
	position: fixed;
	bottom: @bot_h - 4;
}

.login-area {
	._size_rever_margin(295, 432);
	position: fixed;
	left: 70%;

	top: 43%;
	padding: 22px 40px;
	border: 1px solid #eee;
	background: #fff;
	_height: 432px;
	-moz-border-radius: 5px; /* Gecko browsers */
	-webkit-border-radius: 5px; /* Webkit browsers */
	border-radius: 5px;
}

.title {
	height: 25px;
	line-height: 25px;
	font-size: 20px;
	color: #323232;
	&:extend(.yahei);
}

.u_logo {
	background: url(../images/username.png) no-repeat;
	padding: 10px 10px;
	position: absolute;
	top: 35px;
	left: 10px;
}

.ipt {
	border: 1px solid #d3d3d3;
	padding: 12px 10px;
	width: 247px;
	border-radius: 4px;
	padding-left: 35px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	font-size: 14px;
}

.p_logo {
	background: url(../images/password.png) no-repeat;
	padding: 10px 10px;
	position: absolute;
	top: 12px;
	left: 10px;
}

.ipt_ma {
	border: 1px solid #d3d3d3;
	padding: 10px 10px;
	border-radius: 4px;
	width: 160px;
	-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
	box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
}

.tang {
	color: #666;
	font-size: 14px;
}

.pass-button {
	display: block;
	height: 40px;
	font-size: 16px;
	font-weight: bold;
	cursor: pointer;
	color: #fff;
	background: #3f89ec;
	border-radius: 3px;
	border: none;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	width: 300px;
	margin-top: 17px;
}

.forget_pass {
	font-size: 14px;
	float: right;
}

a.forget_pass {
	color: #3f89ec;
	display: block;
	height: 22px;
}

.tang-pass-login-phoenix {
	border-top: 1px solid #f2f2f2;
	z-index: 16;
	font-size: 14px;
	margin-top: 35px;
	padding-top: 20px;
}

.pass-phoenix-title {
	color: #666;
	font-size: 12px;
}

.phoenix-btn-item {
	display: block;
	margin-top: 15px;
	margin-right: 25px;
	color: #00C;
	text-decoration: underline;
	padding-left: 24px;
	cursor: pointer;
	font-size: 12px;
	width: 0;
	height: 24px;
	overflow: hidden;
}

.bd-acc-list {
	margin-top: 17px;
}

.safecode_img{
	height: 39px;
	width: 95px;
	vertical-align: middle;
	position: relative;
	top: -2px;
	margin-left: 10px;
}

.tang-pass-login{
	>p{
		white-space: nowrap;
	}
}


//转向其他站点通知的警告
#warn{
	position: relative;
	top: -2px;
}


/*********foot*************/
.bottom {
	background-color: #519ace;
	text-align: right;
	width:100%;
	position:fixed;
	bottom:0px;
}
.bottom .mc {
	.lineh(@bot_h);
	padding: 0 4em;
}

.bottom em {
	float: left;
	color: #fff;
	font-size: 14px;
}
em, i {
	font-style: normal;
}
.bottom .ibtn.qq {
	background-image: url(../images/iconfont-QQ.png);
}
.bottom .ibtn {
	display: inline-block;
	vertical-align: middle;
	background-image: none;
	width: 36px;
	height: 36px;
	border-radius: 50%;
	border: 1px solid #fff;
	margin-left: 6px;
}
.bottom .ibtn.wx {
	background-image: url(../images/iconfont-wx.png);
}
.bottom .ibtn.wb {
	background-image: url(../images/iconfont-weibo.png);
}.ibtn.ph {
	 background-image: url(../images/iconfont-phone.png);
 }
.bottom .ibtn{background-repeat: no-repeat; background-position: 50% 50%;}




.lite{
	body{
		background-color: #eeeeee;
	}
	.login-area{
		left: 50%;
		top: 50%;
	}

	.bottom{
		display: none;
	}

	.illu{
		bottom: 0;
		._alpha(30);
	}
}
