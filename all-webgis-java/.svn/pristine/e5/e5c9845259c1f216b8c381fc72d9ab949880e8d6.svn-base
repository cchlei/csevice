._map_search{
	.map_cont{
		background-color: #e0e0e0;
	}
}


//
.map_tookit{
	@main_h:365px;
	@r_tab_w:50px;
	@lit_gap:2px;
	@tab_1_h:36px;
	@main_w:@map_tookit_w;


	position: absolute;
	top: @top_bar_h + @tab_1_h + 2;
	right: 0;
	width: @main_w;
	margin-top: @lit_gap;
	z-index: 10;

	li{
		display: none;
		float: none;
		.dura();
		//._alpha(0);
		//.ts_scale(0);
		&.showing{
			display: block;
			//.ts_scale(1);
		}
	}

	.tab_btn_cont{
		em{
			text-align: center;
			cursor: pointer;
			font-family: iconfont;
			&.cur{
				color: @cl_blue_lighten;
			}
		}
	}

	//第一层tab，主tab
	>.tab_btn_cont{
		position: absolute;
		width: 100%;
		left:0;
		top: -@tab_1_h - 2;
		background-color: @cl_blue;
		.font_resize(14px);
		white-space: nowrap;
		em{
			color: #fff;
			text-align: center;
			display: inline-block;
			vertical-align: top;
			.lineh(@tab_1_h);
			width: 25%;
			&.cur{
				background-color: @cl_blue_lighten;
				color: #eee;
			}
		}
	}

	.li_level0{
		//height: @main_h;
		background-color: #fff;
		position: relative;
		>.inn{
			//padding: @gap;
			>.tab_btn_cont{
				.lineh(36);
				background-color: @cl_blue;
				em{
					display: inline-block;
					vertical-align: top;
					color: #fff;
					width: 20%;
					text-align: center;
					&.cur{
						background-color: @cl_orange;
					}
					&:first-child{
						display: none;
					}
				}
			}
		}
	}

	.obj_prop_tab{
		@h:33px;
		position: absolute;
		right: 0;
		left: 0;
		bottom: 0;
		.font_resize(14px);
		.lineh(33);
		em{
			.lineh(@h - 2);
			display: inline-block;
			vertical-align: top;
			width: 20%;
			border: 1px solid @cl_blue_lighten;
			border-left: none;
			text-align: center;
			&.cur{
				color: @cl_orange;
			}
			&:first-child{
				border-left: 1px solid @cl_blue_lighten;
			}
		}
	}
}


//颜色选择器的样式
.color_picker{
	.font_resize(15);
	i{
		display: inline-block;
		vertical-align: top;
		._size(25);
		cursor: pointer;
		position: relative;
		&:hover{
			z-index: 9;
			.ts_scale(1.1);
		}
		.ts_scale(0.99);
		.dura(0.3s);
		&:extend(.__icon);
		background-size: 0px;
		&.cur{
			//outline: 5px solid #fff;
			z-index: 10;
			background-image: url(../images/iconfont-ok.png);
			background-size: 16px;
		}
	}

	//颜色预览
	.cl_priview{
		.dura(0.77s);
		display: block;
		background-color: #fff;
		margin: 2px 0;
		text-align: center;
		.lineh(39);
		color: #fff;
		font-size: 14px;
		&.black{
			color: #333;
		}
	}
}


//单选
.check_box{
	.font_resize(14px);
	em{
		display: inline-block;
		vertical-align: top;
		text-align: center;
		color: #fff;
		background-color: @cl_blue;
		width: 25%;
		.lineh(50);
		cursor: pointer;
		outline: 1px solid #fff;
		&:hover{
			background-color: @cl_blue_lighten;
		}

		&.cur{
			background-color: @cl_orange;
		}
	}
	&.scale{

	}
}


//整体样式
.map_tookit_pan{
	padding: @gap;
	box-shadow: #c9c9c9 -0px 0px 2px;
	input[type=text]{ height: 16px;}
	input[type=text],
	textarea{
		//margin: @gap/2 0;
		padding: @gap/3;
		width: 90%;
		outline: none;
		resize: none;

		&.error{
			border:1px solid @cl_orange;
			background-color: #FAEBE6;
		}
	}

	textarea{
		height: 90px;
	}

	.r_label{
		border-bottom: 1px solid #f0f0f0;
		.lineh(24);
		margin-bottom: @gap/3;
		margin-top: @gap/2;
		i{
			color: @cl_orange;
		}

		input[type=checkbox]{
			position: relative;
			top: 2px;
		}
		&:first-child{
			margin-top: 0;
		}
	}
}

//样式设置面板
.mt_style_sett_panel{
	.check_box{
		margin: @gap/2 0;
	}
	&:extend(.map_tookit_pan all);
}

//信息设置面板
.mt_infotx_panel{
	&:extend(.map_tookit_pan all);
	textarea{
		height: 160px;
	}
}

//符号设置面板
.mt_symbols_panel{
	&:extend(.map_tookit_pan all);
	>p{
		height: 240px;
		overflow: auto;
	}

	.symbols{
		em{
			&:extend(.__icon);
			background-size:contain;
		}
	}
}


//线条--样式设置
.mt_linestyle_panel{
	&:extend(.map_tookit_pan all);
}


//填充-填充样式设置
.mt_fillstyle_panel{
	.ui-spinner{
		//margin: @gap/2 0;
	}
	&:extend(.map_tookit_pan all);
}

//地图标记元素设置面板容器-->
.map_el_sett_body_ul{
	display: none;
	&.showing{
		display: block;
	}
}

//图层选择，切换，排序
.layer_list{
	padding: @gap;
	ul{
		.font_resize(14px);
		//margin-right: -5px;
	}
	li{
		padding: 0;
		margin: 0.5%;
		vertical-align: top;
		width: 49%;
		.iblock;
		cursor: pointer;
		position: relative;
		&:extend(.noSelect);
		.dura();
		span{
			display: block;
			.lineh(57px);
			text-align: center;
			background-color: #e0e0e0;
			.dura();
			&:hover{
				.ts_scale(1.03);
			}
		}

		i{
			display: inline-block;
			vertical-align: middle;
			._icon(16,none);
			background-image: url(../images/iconfont-ok.png);
			.dura();
			.ts_scale(0);

		}
		em{
			.lineh(25);
			text-align: center;
			display: block;
		}

		&.selected{
			i{
				.ts_scale(1);
			}
		}
	}
}

//搜索面板
.search_box{
	&:extend(.map_tookit_pan all);
	//text-align: center;
	#search_input{
		width: 270px;
		vertical-align: top;
		padding: 6px 3px;
		border: none;
		border: 1px solid #e0e0e0;;
		//border-right: none;
		margin-right: 1px;
	}
	.se_btn{
		display: inline-block;
		vertical-align: top;
		.lineh(30);
		text-align: center;
		width: 72px;
		background-color: #e0e0e0;
		cursor: pointer;
		&:hover{
			._alpha(80);
		}

		display: none;

	}

	//搜索列表
	ul{

		max-height: 390px;
		margin-top: @gap;
		overflow: hidden;
		height: 0;
		&.showing{
			height: auto;
			display: block;
			overflow-y: auto;
		}

	}
	li{
		text-indent: 1em;
		.lineh(33);
		display: block;
		border-bottom: 1px solid #f0f0f0;
		&:hover{
			background-color: #f0f0f0;
			color: @cl_blue;
		}
	}

}


//设置面板
.setting_panel{
	&:extend(.map_tookit_pan all);

}


//提示面板
.mt_feature_tip_pan{
	&:extend(.map_tookit_pan all);
}

//feature属性控制面吧
.feature_attr_apn{
	padding-bottom: @gap*3;
}


//保存ft按钮
.save_feature{
	font-family: iconfont;
	text-align: center;
	position: absolute;
	&:extend(.noSelect);
	white-space: nowrap;
	padding: 0 1em;
	top:-38px;
	//left:-@w - 2;
	right: @map_tookit_w + 2;
	.lineh(74);
	background-color: #9C89CC;
	z-index: 999;
	//padding: .5em 0;
	color: #fff;
	cursor: pointer;
	.dura();
	.ts_scale(1);
	._alpha(100);
	em{
		font-size: 27px;
		position: relative;
		top: 3px;
	}
	&:hover{
		._alpha(80);
	}
	&.disable{
		._alpha(0);
		.ts_scale(0);
		background-color: #6c6c6c;
	}
}


//列表面板
.feature_list_panel{
	&:extend(.map_tookit_pan all);
	li{
		@h:33px;
		display: block;
		.lineh(@h);
		border-bottom: 1px solid #f0f0f0;
		font-family: iconfont;
		&:hover{
			background-color: #f0f0f0;
			cursor: pointer;
		}
		i{
			/*._icon(@h,none);
			background-image: url(../images/icon_poly.png);*/
			color: #9FE5DA;
			padding-left: 0.5em;
			font-size: 15px;
			color: #666;
		}

		a{
			._icon(@h,none);
			background-image: url(../images/icon_del.png);
			//margin-right: .5em;
			float: right;
			&:hover{
				background-color: #ddd;
			}
		}
	}
	ul{
		max-height: 360px;
		min-height: 1.5em;
		overflow-y: auto;
	}
}

//绘画中文字提示
.draw_tip_pan{
	position: relative;
	&:extend(.map_tookit_pan all);
	.btn_cancel_draw{
		background-color: @cl_blue;
		position: absolute;
		right: @gap/2;
		top: @gap/2;
		.lineh(30);
		text-align: center;
		color: #fff;
		padding: 0 2em;
		cursor: pointer;
		&:hover{
			._alpha(80);
		}
	}
}