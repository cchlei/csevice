@import "tool";
@import (reference) "vars";

.toolClass;

body{
	background-color: #f6f6f6;
}

.page{

	position: relative;




	>form{
		padding-top: 3em;
		>.row{
			.padding_v(1em);
		}
	}
}

.help-block.header_img_label.changeimg.webuploader-container{
  position: absolute;
  left: 50%;
  margin-left: -57px;
  top: 262px;
}
.headimg{
  position: absolute;
  top: 290px;
  ul{
	margin-top: 20px;
	li{
	  width: 70px;
	  height: 70px;
	  display: inline-block;
	  border: 2px #f6f6f6 solid;
	  &:nth-of-type(2){
		margin: 0px 30px;
	  }
	  &:hover,&.on{
		border: 2px #669fe4 solid;
	  }
	  img{
		width: 100%;
		height: 100%;
	  }
	}
  }
}
.header-img{
	position: relative;
	img{
		width: 202px;
	  	height: 202px;
		.margin_v(@bs_gap);
	}

	.label{
		position: absolute;
		&:extend(.expandin);
	}
}


.form_item_container{
	.form-group{
		&:first-child{
			//margin-top: 0;
		}
		.margin_v(@bs_gap);

		.label{
			position: relative;
			top: 9px;
		}
	}

	.control-label{
		position: relative;
		top: 5px;
	}
}

.line{
	height: 1px;
	background-color: #ddd;
}


form{
	&.form{
		//border: 1px solid #ddd;
		border-radius: @bs_gap/2;
		background-color: #ffffff;
	}
}

form{
	&.form_2{
		padding-bottom: @bs_gap;
	}
}

.gap{
	height: @bs_gap;
}


.pop-el{
	display: none;
}

//企业电话
.ep_phone,.ep_pwd,.ep_email{
	.input-group-addon{
		cursor: default;
	}
}
  .ztop{
	height:115px;
	line-height:115px;
	background-color:#eaedf2;
	position: relative;
	top:0px;
	width:100%;
	z-index: 999;
	margin-bottom: 20px;
	em{
	  position: absolute;
	  font-size: 28px;
	  top: 0px;
	  left:33px;
	}
	span{
	  height:115px;
	  line-height:115px;
	  position: absolute;
	  top: 0px;
	  right:33px;
	  display:block;
	  font-size:14px;
	  cursor:pointer;
	}
  }

.webuploader-pick{
  color: #333333 !important;
}

