<!doctype html><html>
<head>
    <meta charset="UTF-8" />
    <meta name="renderer" content="webkit" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content=""/>
    <meta name="keywords" content=""/>
    <title></title>
    <style type="text/css">
        html,body{
            padding: 0;
            margin: 0;
        }
    </style>
    <script src="../cseajs/csea$.js"></script>
    <script src="../echarts-all.js"></script>
    <script>

    var option = {
        title: {
            text: "对数轴示例",
            x: "center"
        },
        tooltip: {
            trigger: "item",
            formatter: "{a} <br/>{b} : {c}"
        },
        legend: {
            x: 'left',
            data: ["2的指数", "3的指数"]
        },
        xAxis: [
            {
                type: "category",
                name: "x",
                splitLine: {show: false},
                data: ["一", "二", "三", "四", "五", "六", "七", "八", "九"]
            }
        ],
        yAxis: [
            {
                type: "log",
                name: "y"
            }
        ],
        calculable: true,
        series: [
            {
                name: "3的指数",
                type: "line",
                data: [1, 3, 9, 27, 81, 247, 741, 2223, 6669]

            },
            {
                name: "2的指数",
                type: "line",
                data: [1, 2, 4, 8, 16, 32, 64, 128, 256]

            }
        ]
    };

    seajs.usep("_/maplist/_,ctooj",function(Maplist,cj){
        var ec;
        var ml = new Maplist("#mapcont",{
            width:"auto",
            reqpath:"testdata.json",
            onChartsShow:function(_id,infocont,first){
                if(first){
                    ec = echarts.init(infocont.find(".cont")[0]);
                }
                ec.setOption(option);
            },
        });

        cj.winResize(function(){
            if(ec) ec.resize();
        });


        $(function(){

            //顺序 逆序切换
            var topem = $(".topbar p>em").click(function(){
                topem.toggleClass("show");
                dosearch();
            });
            topem.first().addClass("show");


            //顶部工具条
            var topbar = $(".topbar");
            topbar.input = topbar.find("input");
            topbar.find(".glass").click(function(){
                dosearch();
            });

            topbar.input.keydown(function(e){
                if(e.keyCode == 13){
                    dosearch();
                }
            })


            //执行搜索方法
            function dosearch(){
                ml.fresh({
                    searchText:topbar.input.val(),
                    timeindex:topbar.find("[order]:visible").attr("order")
                });
            }
        });
    })
</script>



</head>
<body>
<div class="mc">
<div class="topbar">
    <p>
        <em order="desc">时间 <b>&#xe61f;</b></em>
        <em order="asc">时间 <b>&#xe61d;</b></em>
        <input type=""/>
        <span class="glass">&#xe600;</span>
    </p>
    <a class="btn" href="#"><em>&#xe61e;</em>添加地图</a>
</div>
<div id="mapcont"></div>

</div>
</body>
</html>